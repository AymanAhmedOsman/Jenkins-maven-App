pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Clone the code from your Git repository
                git branch: 'main', url: 'https://github.com/your-repo/java-maven-app.git'
            }
        }

        stage('Build') {
            steps {
                // Build the Maven project
                sh 'mvn clean package'
            }
        }

        stage('Run Tests') {
            steps {
                // Run the tests using Maven
                sh 'mvn test'
            }
        }

        stage('Archive Artifacts') {
            steps {
                // Archive the built JAR file
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Run Application') {
            steps {
                // Run the application
                sh 'java -cp target/simple-app-1.0-SNAPSHOT.jar com.example.App'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check the logs for errors.'
        }
    }
}
